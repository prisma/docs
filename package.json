{
  "name": "prisma-docs-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "oxfmt . --write && oxlint . --fix",
    "types:check": "turbo types:check",
    "lint:links": "pnpm --filter docs lint:links",
    "lint:code": "pnpm --filter docs lint:code",
    "lint:spellcheck": "pnpm --filter docs lint:spellcheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.0.3",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.4"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "shiki": "3.22.0"
    }
  }
}
